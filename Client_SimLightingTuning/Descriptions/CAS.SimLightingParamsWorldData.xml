<?xml version="1.0" encoding="iso-8859-1"?>

<TuningRoot>
    <Instance instance_type="simlighting" class="CAS.SimLightingParamsWorldData" module="CAS" description="Global tuning parameters for sim lighting." path="Client_SimLightingTuning\Descriptions">
        <Tunable type="float" name="AmbientDimming" class="Tunable" default="0.0" display="Ambient: Dimming" description="Decreases ambient by amount of direct lighting from key/fill to balance overall intensity." />

        <Tunable type="float" name="AmbientFromLightsFactor" class="Tunable" default="0.0" display="Ambient: Amount from lights" description="Controls what fraction of the key light to add to ambient." />

        <Tunable type="float" name="AmbientFromOutdoorsFactor" class="Tunable" default="0.0" display="Ambient: Amount from outdoors" description="Controls what fraction of the outdoor ambient color to add to ambient." />

        <Tunable type="float" name="AmbientFromRoomFactor" class="Tunable" default="0.0" display="Ambient: Amount from room" description="Controls what fraction of the room ambient color to add to ambient." />

        <Tunable type="float" name="AmbientFromSunFactor" class="Tunable" default="0.0" display="Ambient: Amount from sun" description="Controls what fraction of the sun directional color to add to ambient." />

        <Tunable type="float" name="AmbientIntensityMax" class="Tunable" default="1.85" display="Ambient: Intensity max" description="Upper value for vertical gradient applied to ambient term." />

        <Tunable type="float" name="AmbientIntensityMin" class="Tunable" default="1.2" display="Ambient: Intensity min" description="Lower value for vertical gradient applied to ambient term." />

        <Tunable type="float" name="BBBAmbientIntensityMax" class="Tunable" default="0.0" display="BBB: Ambient max" description="Intensity of BBB ambient light, at the top of the sim." />

        <Tunable type="float" name="BBBAmbientIntensityMin" class="Tunable" default="0.0" display="BBB: Ambient min" description="Intensity of BBB ambient light, at the bottom of the sim." />

        <TunableTuple name="BBBBaseColor" class="TunableVector3" display="BBB: Base color" description="Sets base BBB color for all BBB lighting.">
            <Tunable type="float" name="x" class="Tunable" default="0.24" />
            <Tunable type="float" name="y" class="Tunable" default="0.24" />
            <Tunable type="float" name="z" class="Tunable" default="0.48" />
        </TunableTuple>

        <Tunable type="bool" name="BBBEnableCustom" class="Tunable" default="False" display="BBB: Enable custom" description="Enables sim-specific BBB. This disables influence from the object (light rig) BBB settings." />

        <Tunable type="float" name="BBBFadeLumaEnd" class="Tunable" default="0.3" display="BBB: Fade luma end" description="Approximate luma to end fading out BBB; should be greater than the start value. BBB is inactive above this point." />

        <Tunable type="float" name="BBBFadeLumaStart" class="Tunable" default="0.1" display="BBB: Fade luma start" description="Approximate luma to start fading out BBB; should be less than the end value. Below this point the sim gets full BBB." />

        <Tunable type="bool" name="BBBFadeSaturation" class="Tunable" default="False" display="BBB: Fade desaturate enable" description="Enables desaturation as BBB fades out to avoid mixing bluish BBB colors with reddish normal light." />

        <Tunable type="float" name="BBBFillIntensity" class="Tunable" default="0.3" display="BBB: Fill intensity" description="Intensity of the BBB fill light." />

        <Tunable type="float" name="BBBKeyIntensity" class="Tunable" default="0.5" display="BBB: Key intensity" description="Intensity of the BBB key light." />

        <Tunable type="float" name="BBBMaxLumaDelta" class="Tunable" default="8.0" display="BBB: Max Luma Delta" description="Max amount of luma per second that BBB can change." />

        <Tunable type="float" name="DistMax" class="Tunable" default="6.0" display="Sources: Distance max" description="Maximum distance in meters for the distance-based falloff ramp for light contribution. Lights outside of this radius contribute no light." />

        <Tunable type="float" name="DistMin" class="Tunable" default="0.0" display="Sources: Distance min" description="Minimum distance in meters for the distance-based falloff ramp for light contribution. Lights within this radius contribute at full intensity." />

        <Tunable type="float" name="FadeMax" class="Tunable" default="180.0" display="Sources: Angle-based fade max" description="Maximum angle in degrees for angle-based falloff for light contribution. Once the angle between a key/fill p-light and a source light reaches this threshold, the source light is attenuated to zero." />

        <Tunable type="float" name="FadeMin" class="Tunable" default="0.0" display="Sources: Angle-based fade min" description="Minimum angle in degrees for angle-based falloff for light contribution. Once the angle between a key/fill p-light and a source light is above the threshold, the source light starts attenuating." />

        <Tunable type="float" name="FadePower" class="Tunable" default="0.8165" display="Sources: Angle-based fade power" description="Controls the sharpness of falloff as the angle between a key/fill p-light and a source light increases. 1.0 gives a linear ramp, <1 gives softer falloff, >1 gives sharper falloff." />

        <Tunable type="float" name="FillAngle" class="Tunable" default="-65.0" display="Fill: Angle" description="Yaw of the fill light in view space." />

        <Tunable type="float" name="FillClamp" class="Tunable" default="0.421" display="Fill: Clamp" description="Luminance limit for fill light (limit for max of R/G/B)." />

        <TunableTuple name="FillFloor" class="TunableVector3" display="Fill: Floor" description="Hard minimum R/G/B color value for fill light; the fill light is raised to this color value if it falls below.">
            <Tunable type="float" name="x" class="Tunable" default="0" />
            <Tunable type="float" name="y" class="Tunable" default="0" />
            <Tunable type="float" name="z" class="Tunable" default="0" />
        </TunableTuple>

        <Tunable type="float" name="FillHeight" class="Tunable" default="0.18" display="Fill: Height" description="Sets the relative height of the fill light, in meters, from the rig origin." />

        <Tunable type="float" name="FillIntensity" class="Tunable" default="0.16" display="Fill: Intensity" description="Intensity multiplier for fill light; amplifies or attenuates all contributions to the fill light, before the floor/clamp." />

        <Tunable type="float" name="FillMin" class="Tunable" default="1.0" display="Fill: Minimum" description="Minimum clamp for angle-based falloff (0-1) (applied for each source light)." />

        <TunableTuple name="FillPedestal" class="TunableVector3" display="Fill: Pedestal" description="Additional colored light to add onto the fill light, after all source lights and min/maxes have been applied.">
            <Tunable type="float" name="x" class="Tunable" default="0" />
            <Tunable type="float" name="y" class="Tunable" default="0" />
            <Tunable type="float" name="z" class="Tunable" default="0" />
        </TunableTuple>

        <Tunable type="float" name="FillSaturation" class="Tunable" default="1.0" display="Fill: Saturation" description="Increases or decreases the saturation of the source light contributions to the fill light color." />

        <Tunable type="float" name="KeyAngle" class="Tunable" default="33.48" display="Key: Angle" description="Yaw of the key light in view space." />

        <Tunable type="float" name="KeyClamp" class="Tunable" default="0.602" display="Key: Clamp" description="Luminance limit for key light (limit for max of R/G/B)." />

        <TunableTuple type="float" name="KeyFloor" class="TunableVector3" display="Key: Floor" description="Hard minimum R/G/B color value for key light; the key light is raised to this color value if it falls below.">
            <Tunable type="float" name="x" class="Tunable" default="0" />
            <Tunable type="float" name="y" class="Tunable" default="0" />
            <Tunable type="float" name="z" class="Tunable" default="0" />
        </TunableTuple>

        <Tunable type="float" name="KeyHeight" class="Tunable" default="1.236" display="Key: Height" description="Sets the relative height of the key light, in meters, from the rig origin." />

        <Tunable type="float" name="KeyIntensity" class="Tunable" default="0.3" display="Key: Intensity" description="Intensity multiplier for key light; amplifies or attenuates all contributions to the key light, before the floor/clamp." />

        <Tunable type="float" name="KeyMin" class="Tunable" default="0.32" display="Key: Minimum" description="Minimum clamp for angle-based falloff (0-1) (applied for each source light)." />

        <TunableTuple name="KeyPedestal" class="TunableVector3" display="Key: Pedestal" description="Additional colored light to add onto the key light, after all source lights and min/maxes have been applied.">
            <Tunable type="float" name="x" class="Tunable" default="0" />
            <Tunable type="float" name="y" class="Tunable" default="0" />
            <Tunable type="float" name="z" class="Tunable" default="0" />
        </TunableTuple>

        <Tunable type="float" name="KeySaturation" class="Tunable" default="1.0" display="Key: Saturation" description="Increases or decreases the saturation of the source light contributions to the key light color." />

        <Tunable type="float" name="LightBaseHeight" class="Tunable" default="0.508" display="Global: Light Target Height" description="Sets the height above the sim's root locator, in meters, to use as the origin of the perfect light rig." />

        <Tunable type="float" name="PointLightExtrusionSkySide" class="Tunable" default="1.0" display="Point Lights: Sky Side Extrusion" description="Extend a Window point light by this times window height on the sky side." />

        <Tunable type="float" name="PointLightExtrusionSunSide" class="Tunable" default="1.0" display="Point Lights: Sun Side Extrusion" description="Extend a Window point light by this times window height on the sun side." />

        <Tunable type="float" name="PointLightFraction" class="Tunable" default="0.8" display="Point Lights: Fraction Applied" description="Sets the fraction of the four brightest lights that will be diverted to point lights." />

        <Tunable type="float" name="PointLightMaxLumaDecrease" class="Tunable" default="2.0" display="Point Lights: Max Luma Decrease" description="Sets the amount of luma per second that can be removed from a point light (2 => white to black in 1/2 seconds, 3 => 1/3 etc.)." />

        <Tunable type="float" name="PointLightMaxLumaIncrease" class="Tunable" default="2.0" display="Point Lights: Max Luma Increase" description="Sets the amount of luma per second that can be added to a point light (2 => black to white in 1/2 seconds, 3=>1/3 etc.)." />

        <Tunable type="float" name="Rim1Angle" class="Tunable" default="128.0" display="Rim 1: Angle" description="Yaw angle of first rim light, in degrees." />

        <TunableTuple name="Rim1Color" class="TunableVector3" display="Rim 1: Color" description="Color of first rim light.">
            <Tunable type="float" name="x" class="Tunable" default="0.56" />
            <Tunable type="float" name="y" class="Tunable" default="0.568" />
            <Tunable type="float" name="z" class="Tunable" default="0.576" />
        </TunableTuple>

        <Tunable type="float" name="Rim1Height" class="Tunable" default="0.436" display="Rim 1: Height" description="Relative height of first rim light, in meters." />

        <Tunable type="float" name="Rim1Intensity" class="Tunable" default="0.1" display="Rim 1: Intensity" description="Intensity of first rim light." />

        <Tunable type="float" name="Rim1MaxRatio" class="Tunable" default="0" display="Rim 1: Max Ratio" description="Limits rim 1 contribution as a ratio of key+fill+ambient light. Zero disables limit." />

        <Tunable type="float" name="Rim2Angle" class="Tunable" default="240.0" display="Rim 2: Angle" description="Yaw angle of second rim light, in degrees." />

        <TunableTuple name="Rim2Color" class="TunableVector3" display="Rim 2: Color" description="Color of second rim light.">
            <Tunable type="float" name="x" class="Tunable" default="0.56" />
            <Tunable type="float" name="y" class="Tunable" default="0.568" />
            <Tunable type="float" name="z" class="Tunable" default="0.576" />
        </TunableTuple>

        <Tunable type="float" name="Rim2Height" class="Tunable" default="0.436" display="Rim 2: Height" description="Relative height of the second rim light, in meters." />

        <Tunable type="float" name="Rim2Intensity" class="Tunable" default="0.0" display="Rim 2: Intensity" description="Intensity of second rim light." />

        <Tunable type="float" name="Rim2MaxRatio" class="Tunable" default="0" display="Rim 2: Max Ratio" description="Limits rim 2 contribution as a ratio of key+fill+ambient light. Zero disables limit." />

        <Tunable type="float" name="SourceClamp" class="Tunable" default="100.0" display="Sources: Source clamp" description="Limits the intensity of all non-sun source lights for perfect light computations (post-scale)." />

        <Tunable type="float" name="SourceScale" class="Tunable" default="1.0" display="Sources: Source scale" description="Scales all non-sun source light inputs up or down; this is an alternative to scaling the key/fill clamps and intensities." />

        <Tunable type="float" name="SunClamp" class="Tunable" default="1.25" display="Outdoor: Sun clamp" description="Maximum luminance value for the sun when lighting sims." />

        <Tunable type="float" name="SunSaturation" class="Tunable" default="1.0" display="Outdoor: Sun saturation" description="Saturation factor to apply specifically only to the sun." />

        <Tunable type="float" name="SunScale" class="Tunable" default="1.0" display="Outdoor: Sun scale" description="Scale factor to apply specifically only to the sun." />
    </Instance>
</TuningRoot>