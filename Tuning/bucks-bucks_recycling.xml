<?xml version="1.0" encoding="iso-8859-1"?>

<TuningRoot>
    <Module name="bucks.bucks_recycling">
        <Class name="BucksRecycling">
            <TunableList name="RECYCLING_VALUE" class="TunableMapping" display="Recycling Value" mapping_key="Bucks Type" mapping_value="Recycled Value" description="Maps a buck type the parameters controlling object recycling value. Recycling Formula: Total = Base Value * Price Response Curve (Object Current Simoleon Value) * Object Recycle Value (Buck Type)" group="General">
                <TunableTuple class="TunableTuple" group="General">
                    <TunableEnum type="BucksType" name="Bucks Type" class="TunableEnumEntry" default="INVALID" display="Bucks Type" dynamic_entries="bucks-bucks_enums.BucksType._elements" static_entries="bucks-bucks_enums.BucksType" group="General" pack_safe="True" />
                    <TunableTuple name="Recycled Value" class="TunableTuple" display="Recycled Value" description="Recycling parameters for this buck type." group="General">
                        <Tunable type="float" name="base_value" class="TunableRange" default="1.0" display="Base Value" min="0.0" max="None" description="Base multiplier for this buck type" tuning_state="NeedsTuning" group="General" />
                        <TunableList name="price_response_curve" class="TunableCurve" display="Price Response Curve" description="Modulate the base value by the objects Simoleon value." group="General">
                            <TunableTuple class="TunableVector2" description="Point on a Curve" group="General">
                                <Tunable type="float" name="x" class="Tunable" default="0.0" display="x: Object Price" description="x component" tuning_state="NeedsTuning" group="General" />
                                <Tunable type="float" name="y" class="Tunable" default="0.0" display="y: Base Multiplier" description="y component" tuning_state="NeedsTuning" group="General" />
                            </TunableTuple>
                        </TunableList>
                    </TunableTuple>
                </TunableTuple>
            </TunableList>
        </Class>
    </Module>
</TuningRoot>