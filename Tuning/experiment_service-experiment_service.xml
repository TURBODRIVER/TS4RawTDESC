                                    <Tunable type="int" name="key" class="Tunable" default="None" display="Key" tuning_state="NeedsTuning" group="General" />
                                    <TunableList name="value" class="TunableList" display="Value" description="The pivotal moments that will be available for the given group." group="General">
                                        <Tunable type="snippet" class="TunableReference" description="A pivotal moment available to player." allow_none="False" group="General" pack_safe="True" restrict="PivotalMoment" />
                                    </TunableList>
                                </TunableTuple>
                            </TunableList>
                        </TunableTuple>
                        <TunableTuple name="sim_experiment" class="TunableSimExperiment" display="Sim Experiment" group="General">
                            <TunableList name="loot_mapping" class="TunableMapping" display="Loot Mapping" mapping_key="key" mapping_value="value" description="Mapping of experiments and player segmentation." group="General" mapping_class="TunableSegmentationDataMap">
                                <TunableTuple class="TunableTuple" group="General">
                                    <Tunable type="int" name="key" class="Tunable" default="None" display="Key" tuning_state="NeedsTuning" group="General" />
                                    <TunableList name="value" class="TunableList" display="Value" description="The loots that will be rewarded for the experiment." group="General">
                                        <Tunable type="action" class="TunableReference" description="A loot that will be rewarded." allow_none="False" group="General" pack_safe="True" restrict="LootActions" />
                                    </TunableList>
                                </TunableTuple>
                            </TunableList>
                        </TunableTuple>
                    </TunableVariant>
                </TunableTuple>
            </TunableList>
        </Class>
