                        <TunableTuple name="pivotal_moment_experiment" class="TunablePivotalMomentsExperiment" display="Pivotal Moment Experiment" group="General">
                            <TunableList name="control_group_pivotal_moments" class="TunableList" display="Control Group Pivotal Moments" description="The pivotal moments that will be available for players that are not assigned to any group" group="General">
