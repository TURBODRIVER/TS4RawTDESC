<?xml version="1.0" encoding="iso-8859-1"?>

<TuningRoot>
    <Instance instance_type="headline" class="Headline" module="headlines.headline" description="A category of headline." instance_needs_reference="True" instance_subclasses_only="False" path="Headlines\Descriptions" use_guid_for_reference="True">
        <TunableList name="levels" class="TunableMapping" display="Levels" mapping_key="key" mapping_value="value" description="Different Headline update levels." group="General" mapping_class="HeadlineLevelMapping">
            <TunableTuple class="TunableTuple" group="General">
                <Tunable type="int" name="key" class="Tunable" default="1" display="Key" description="The level key." tuning_state="NeedsTuning" group="General" />
                <TunableTuple name="value" class="HeadlineUpdateData" display="Value" description="Level data." group="General">
                    <TunableTuple name="color" class="TunableColorRGBA" display="Color" description="The color of the headline." group="UI">
                        <Tunable type="int" name="a" class="TunableRange" default="255" display="A" min="0" max="255" description="alpha value (0-255) (0 is transparent, 255 is opaque)" tuning_state="NeedsTuning" group="General" />
                        <Tunable type="int" name="b" class="TunableRange" default="255" display="B" min="0" max="255" description="blue value (0-255)" tuning_state="NeedsTuning" group="General" />
                        <Tunable type="int" name="g" class="TunableRange" default="255" display="G" min="0" max="255" description="green value (0-255)" tuning_state="NeedsTuning" group="General" />
                        <Tunable type="int" name="r" class="TunableRange" default="255" display="R" min="0" max="255" description="red value (0-255)" tuning_state="NeedsTuning" group="General" />
                    </TunableTuple>
                    <TunableEnum type="FXType" name="fx" class="TunableEnumEntry" default="NO_EFFECT" display="Fx" static_entries="headlines-headline.FXType" description="The fx on the flash timeline that should be used." group="General" />
                    <Tunable type="ResourceKey" name="icon" class="TunableIcon" default="None" display="Icon" description="The icon that we will use for this update." group="General" resource_types="0x2f7d0004" />
                    <Tunable type="float" name="maximum_value" class="Tunable" default="1.0" display="Maximum Value" description="The maximum value that this update level will be used." tuning_state="NeedsTuning" group="General" />
                    <Tunable type="float" name="minimum_value" class="Tunable" default="0.0" display="Minimum Value" description="The minimum value that this update level will be used." tuning_state="NeedsTuning" group="General" />
                </TunableTuple>
            </TunableTuple>
        </TunableList>

        <Tunable type="int" name="priority" class="Tunable" default="0" display="Priority" description="The display priority of this headline so that if multiple headlines are triggered at the same time, this value will be used to determine which one has priority of another. Lower values indicate a higher priority." tuning_state="NeedsTuning" group="General" />

        <Tunable type="bool" name="show_during_sim_info_creation" class="Tunable" default="True" display="Show During Sim Info Creation" description="If true, this headline will be shown on sims when they are first created. One case in which this will occur is if a SimFilter had to create a new sim for a situation. If false, will not show the headline." group="General" />

        <TunableVariant type="None" name="text" class="HeadlineTextOptionalTunable" default="disabled" display="Text" description="If enabled then this headline will have text displayed along the icon." group="General">
            <Tunable name="disabled" class="TunableExistance" display="Disabled" />
            <Tunable type="int" name="enabled" class="TunableLocalizedString" default="0x0" display="Enabled" description="The text to display along the icon on this headline." group="General" />
        </TunableVariant>
    </Instance>
</TuningRoot>