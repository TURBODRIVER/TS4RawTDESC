            <Tunable type="role_state" name="celebrant_reception_role_state" class="TunableReference" display="Celebrant Reception Role State" description="Celebrant's role state after the celebration (eat, drink, socialize, dance)." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="situation_job" name="situation_job" class="TunableReference" display="Situation Job" description="The SituationJob for the celebrant." allow_none="False" group="General" restrict="SituationJob" />
        </TunableTuple>

        <TunableTuple name="entertainer" class="TunableTuple" display="Entertainer" group="Roles">
            <Tunable type="role_state" name="entertainer_prep_reception_state" class="TunableReference" display="Entertainer Prep Reception State" description="Entertainer's role state before reception." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="role_state" name="entertainer_reception_role_state" class="TunableReference" display="Entertainer Reception Role State" description="Entertainer's role state during reception." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="situation_job" name="situation_job" class="TunableReference" display="Situation Job" description="The SituationJob for the entertainer." allow_none="False" group="General" restrict="SituationJob" />
        </TunableTuple>

        <TunableTuple name="guest" class="TunableTuple" display="Guest" group="Roles">
            <Tunable type="role_state" name="guest_gather_impatient_role_state" class="TunableReference" display="Guest Gather Impatient Role State" description="Guest's role state if it is taking too long for the celebration to start." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="role_state" name="guest_gather_role_state" class="TunableReference" display="Guest Gather Role State" description="Guest's role state before the celebration (gather phase)." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="role_state" name="guest_reception_role_state" class="TunableReference" display="Guest Reception Role State" description="Guest's role state after the celebration (now they can eat the cake)." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="situation_job" name="situation_job" class="TunableReference" display="Situation Job" description="The SituationJob for the Guests." allow_none="False" group="General" restrict="SituationJob" />
        </TunableTuple>

        <Tunable type="float" name="guests_become_impatient_timeout" class="TunableSimMinute" default="120" display="Guests Become Impatient Timeout" min="None" max="None" description="If the celebration is not started in this amount of time the guests will grow impatient." tuning_state="NeedsTuning" group="Triggers" />

        <TunableTuple name="start_reception" class="TunableInteractionOfInterest" display="Start Reception" description="This is a birthday cake interaction where starting this interaction starts the cake reception phase." group="Triggers">
