<?xml version="1.0" encoding="iso-8859-1"?>

<TuningRoot>
    <Instance instance_type="situation" class="BirthdayPartySituation" module="situations.complex.birthday_party" instance_subclasses_only="False" parents="SituationComplexCommon, SituationComplex, Situation" path="Situations\Descriptions" use_guid_for_reference="True">
        <TunableTuple name="bartender" class="TunableTuple" display="Bartender" group="Roles">
            <Tunable type="role_state" name="bartender_pre_reception_role_state" class="TunableReference" display="Bartender Pre Reception Role State" description="Bartender's role state to prepare drinks and socialize with guests." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="role_state" name="bartender_reception_role_state" class="TunableReference" display="Bartender Reception Role State" description="Bartender's role state to prepare drinks, socialize, etc. during the reception." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="situation_job" name="situation_job" class="TunableReference" display="Situation Job" description="The SituationJob for the Bartender." allow_none="False" group="General" restrict="SituationJob" />
