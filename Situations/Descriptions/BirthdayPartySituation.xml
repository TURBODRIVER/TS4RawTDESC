            <Tunable type="role_state" name="caterer_serve_role_state" class="TunableReference" display="Caterer Serve Role State" description="Caterer's role state for serving the guests." allow_none="False" group="General" restrict="RoleState" />
            <Tunable type="situation_job" name="situation_job" class="TunableReference" display="Situation Job" description="The SituationJob for the caterer." allow_none="False" group="General" restrict="SituationJob" />
        </TunableTuple>

